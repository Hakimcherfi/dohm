<!-- Champ/Slot HORRAIRE RESERVATION  -->
<field name="horraire_resa">
       <prompt> A quelle heure voulez-vous prendre rdv ? </prompt>

       <!-- Appel a une grammaire externe -->
       <grammar src="grammaire_horraire.grxml" type="application/srgs+xml" />

       <!-- Gestion des erreurs -->
       <help> Veuillez choisir un horraire pour votre rendez-vous entre 7h30 et 19h30.</help>
       <noinput> Je n'ai pas entendu. Pouvez-vous repeter ? </noinput>
       <nomatch> Je ne vous ai pas compris. Pouvez-vous m'indiquer une heure comprise entre 7h30 et 19h30. </nomatch>

       <filled>
              <if cond="horraire_resa.nb_heures &gt;= 23 || horraire_resa.nb_minutes &gt;= 60">
                     Les heures indiquées ne sont pas valides. Veuillez choisir un horraire pour votre rendez-vous entre 7h30 et 19h30. />
                     <clear namelist="horraire_resa" />    

              <elseif cond="horraire_resa.nb_heures &gt;= 7 &amp;&amp; horraire_resa.nb_heures &lt;= 20" />
                     <if cond="horraire_resa.nb_heures == 7">
                            <if cond="horraire_resa.nb_minutes &lt;= 29">
                                   Les heures indiquées ne sont pas valides. Veuillez choisir un horraire pour votre rendez-vous entre 7h30 et 19h30. />
                                   <clear namelist="horraire_resa" />
                            <else/>
                                   Votre horraire de reservation est  <value expr="horraire_resa.text" /> 
                            </if>

                     <elseif cond="horraire_resa.nb_heures == 19"/>
                            <if cond="horraire_resa.nb_minutes &gt;= 31">
                                   Les heures indiquées ne sont pas valides. Veuillez choisir un horraire pour votre rendez-vous entre 7h30 et 19h30. />
                                   <clear namelist="horraire_resa" />
                            <else/>
                                   Votre horraire de reservation est  <value expr="horraire_resa.text" /> 
                            </if>
                     <else/>
                            Votre horraire de reservation est  <value expr="horraire_resa.text" /> 
                     </if>

              <else/>
                     L'horraire choisi n'est pas compris entre 7h30 et 19h30 />
                     <clear namelist="horraire_resa" />       
              </if>
       </filled>

</field>

